# Paper Agent Configuration
# Copy this file to config.yaml and customize for your setup
#
# You can also override any setting via command line:
#   python daily_update.py --notification-email your@email.com
#   python web_server.py --port 8080

# =============================================================================
# User Settings (REQUIRED - customize these)
# =============================================================================

# Email for notifications (daily update summaries)
notification_email: "your-email@gmail.com"

# Your website URL (shown in notification emails)
website_url: "http://localhost:5001"

# =============================================================================
# Gmail API Settings
# =============================================================================

gmail:
  # Path to OAuth credentials file (downloaded from Google Cloud Console)
  # See README.md for setup instructions
  credentials_file: "credentials.json"

  # Path to store OAuth token (auto-generated after first login)
  token_file: "token.json"

  # Gmail search query for fetching papers
  # Default fetches Google Scholar alerts
  search_query: "from:scholaralerts-noreply@google.com"

# =============================================================================
# Data Storage Settings
# =============================================================================

data:
  # Directory for storing database and index files
  # Relative to project root, or use absolute path
  data_dir: "web_interface/data"

  # Database filename
  db_file: "papers.db"

  # FAISS index filename
  index_file: "papers.index"

  # Paper IDs mapping filename
  ids_file: "paper_ids.json"

# =============================================================================
# Web Server Settings
# =============================================================================

web:
  # Host to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
  host: "0.0.0.0"

  # Port number
  port: 5001

  # Enable debug mode (auto-reload on changes)
  debug: true

  # Papers per page in the web interface
  papers_per_page: 10

# =============================================================================
# Semantic Search Settings
# =============================================================================

search:
  # Sentence transformer model for embeddings
  model_name: "all-MiniLM-L6-v2"

  # Minimum similarity score for semantic search results (0.0 - 1.0)
  score_threshold: 0.2

# =============================================================================
# Topic Tagging Settings
# =============================================================================

topics:
  # Score threshold for semantic search tagging
  score_threshold: 0.2

  # Topic definitions can be customized based on your research interests
  # See topic_tagger.py for the default definitions

# =============================================================================
# Daily Update Settings
# =============================================================================

daily_update:
  # Number of days to look back for emails
  default_days: 1

  # Maximum emails to fetch per run
  max_emails: 100

  # Send email notification after update
  send_notification: true

# =============================================================================
# Database Settings (PostgreSQL with Neon)
# =============================================================================

database:
  # PostgreSQL connection URL (Neon serverless)
  # Get your connection string from: https://neon.tech/
  # Uses connection pooling for better performance
  url: "postgresql://user:password@host/dbname?sslmode=require"

# =============================================================================
# Gemini API Settings (for auto_summary)
# =============================================================================

gemini:
  # API key for wearables-ape.io Gemini API
  # Get your key from: https://wearables-ape.io/
  # Or set via environment variable: GEMINI_API_KEY
  api_key: "your-api-key-here"

  # API endpoint
  api_url: "https://api.wearables-ape.io/conversations/sync"

  # Default model to use
  model: "gemini-2.0-flash"
